{
  "name": "pm:fetchFathomSummary",
  "description": "Fetch an AI-generated meeting summary and action items from Fathom via MCP.",
  "creator": "Covia PM",
  "dateCreated": "2026-02-21T00:00:00Z",
  "keywords": ["fathom", "summary", "meeting-intelligence", "mcp"],
  "operation": {
    "adapter": "orchestrator",
    "input": {
      "type": "object",
      "properties": {
        "callRef": { "type": "string", "description": "Meeting ID or URL" },
        "server": { "type": "string", "description": "MCP server URL" },
        "token": { "type": "string", "secret": true }
      },
      "required": ["callRef", "server"]
    },
    "output": {
      "type": "object",
      "properties": {
        "transcript": { "type": "string" },
        "summary": { "type": "string" }
      }
    },
    "steps": [
      {
        "op": "mcp:tools:call",
        "name": "Fetch Fathom Summary",
        "input": {
          "server": ["input", "server"],
          "toolName": ["const", "get_meeting_summary"],
          "arguments": { "meetingId": ["input", "callRef"] },
          "token": ["input", "token"]
        }
      }
    ],
    "result": {
      "transcript": [0, "transcript"],
      "summary": [0, "summary"]
    }
  }
}
